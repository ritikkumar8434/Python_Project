import os
from dotenv import load_dotenv
from twilio.rest import Client

# Load environment variables from .env file
load_dotenv()

def send_sms(to_number: str, message_body: str) -> bool:
    """
    Send SMS using Twilio API.
    Make sure TWILIO_ACCOUNT_SID, TWILIO_AUTH_TOKEN, TWILIO_PHONE_NUMBER
    are set in your .env file or system environment.
    """
    account_sid = os.getenv("TWILIO_ACCOUNT_SID")
    auth_token = os.getenv("TWILIO_AUTH_TOKEN")
    from_number = os.getenv("TWILIO_PHONE_NUMBER")

    if not all([account_sid, auth_token, from_number]):
        print("‚ùå Missing Twilio configuration in environment variables.")
        return False

    client = Client(account_sid, auth_token)

    try:
        message = client.messages.create(
            body=message_body,
            from_=from_number,
            to=to_number
        )
        print(f"‚úÖ Message sent successfully! SID: {message.sid}")
        return True
    except Exception as e:
        print(f"‚ùå Failed to send SMS: {str(e)}")
        return False


if __name__ == "__main__":
    send_sms(
        to_number="+9189XXXXXXXX",  # recipient phone (with country code)
        message_body="Hello World! üöÄ Test SMS from Python via Twilio"
    )
